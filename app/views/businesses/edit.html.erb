<h1>Edit Business</h1>
<form method="post" action="/businesses/<%= @business.id %>">
  <input type="hidden" name="_method" value="PUT">
  <div>
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="<%= @business.name %>" />
  </div>

  <div>
    <label for="address">Address</label>
    <textarea id="address" name="address"><%= @business.address %></textarea>
  </div>

  <div>
    <label for="description">Description</label>
    <textarea id="description" name="description"><%= @business.description %></textarea>
  </div>
  
  <div>
    <input type="submit" value="Update!" />
  </div>
</form> 